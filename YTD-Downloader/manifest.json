{
    "name": "Youtube Downloader",
    "description": "Download any youtube Videos",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tabs", "http://*/*", "https://*/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://*/*", "http://*/*"],
          "js": ["content.js"],
          "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_title": "Set this page's color.",
        "default_popup": "index.html"
    },
    "manifest_version": 2
  }
  
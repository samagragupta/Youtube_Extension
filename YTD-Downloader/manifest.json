{
    "name": "Youtube Downloader",
    "description": "Download any youtube Videos",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tabs", "http://*/*", "https://*/*"
    ],
    "content_scripts": [
        {
          "matches": ["*://www.youtube.com/watch?v=*"],
          "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_title": "Set this page's color.",
        "default_popup": "index.html"
    },
    "manifest_version": 2
  }
  